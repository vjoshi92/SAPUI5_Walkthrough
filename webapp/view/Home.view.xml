<mvc:View controllerName="com.synconic.practice.SAPUI5_Walkthorugh.controller.Home" 
		  xmlns:html="http://www.w3.org/1999/xhtml"
		  xmlns:mvc="sap.ui.core.mvc" 
		  displayBlock="true" 
		  xmlns="sap.m">
	<Panel headerText="{i18n>helloPanelTitle}"
			class="sapUiResponsiveMargin" width="auto">
			<content>
				<Button class="sapUiSmallMarginEnd" icon="sap-icon://world"
					text="{i18n>openDialogButtonText}" press="onOpenDialog"/>
				<Button class="sapUiSmallMarginEnd" text="{i18n>showHelloButtonText}" press="onPressHello"/>
				<Input value="{/recipient/name}"
				   valueLiveUpdate="true"
				   width="60%"/>
				<Text
					text="Hello {/recipient/name}"
					class="sapUiSmallMargin"/>

			</content>
	</Panel>
</mvc:View>